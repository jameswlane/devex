{
	"name": "devex",
	"version": "0.0.0",
	"description": "Used for release automation",
	"scripts": {
		"biome:format": "biome format --write",
		"biome:lint": "biome lint --write",
		"biome:check": "biome check --write",
		"build": "turbo build",
		"build:go": "turbo build:go",
		"generate": "turbo generate",
		"download": "turbo download",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"lint:go": "turbo lint:go",
		"lint:fix": "turbo lint:fix",
		"test": "turbo test",
		"test:go": "turbo test:go",
		"test:ginkgo": "turbo test:ginkgo",
		"clean": "turbo clean",
		"cli:build": "turbo build:go --filter=@devex/cli",
		"cli:test": "turbo test:go --filter=@devex/cli",
		"cli:lint": "turbo lint:go --filter=@devex/cli",
		"auto": "auto",
		"auto:version": "auto version",
		"auto:changelog": "auto changelog",
		"auto:release": "auto shipit",
		"release:detect": "turbo run release:detect",
		"release:version": "turbo run release:version",
		"release:changelog": "turbo run release:changelog",
		"release:build": "turbo run release:build",
		"web:build": "turbo build --filter=@devex/web",
		"web:dev": "turbo dev --filter=@devex/web",
		"docs:build": "turbo build --filter=@devex/docs",
		"docs:dev": "turbo dev --filter=@devex/docs",
		"goreleaser:generate": "node scripts/generate-goreleaser.js",
		"prerelease": "npm run goreleaser:generate",
		"act:lint": "actionlint .github/workflows/*.yml",
		"act:validate": "action-validator .github/workflows/*.yml",
		"act:test": "act push -W .github/workflows/ci.yml -n",
		"act:test:release": "act push -W .github/workflows/release.yml -n",
		"act:check": "npm run act:lint && npm run act:validate",
		"docker:build": "apps/cli/scripts/docker.sh build",
		"docker:run": "apps/cli/scripts/docker.sh run",
		"docker:shell": "apps/cli/scripts/docker.sh shell",
		"docker:logs": "apps/cli/scripts/docker.sh logs",
		"docker:setup": "apps/cli/scripts/docker.sh setup",
		"docker:clean": "apps/cli/scripts/docker.sh clean"
	},
	"keywords": [],
	"author": "James W Lane",
	"license": "Apache-2.0",
	"packageManager": "pnpm@10.18.2",
	"devDependencies": {
		"@auto-it/conventional-commits": "^11.2.1",
		"@auto-it/core": "^11.2.1",
		"@biomejs/biome": "2.2.4",
		"@commitlint/config-conventional": "^19.8.1",
		"@commitlint/format": "^19.8.1",
		"@octokit/rest": "^22.0.0",
		"auto": "^11.3.0",
		"commitlint": "^19.8.0",
		"glob": "^11.0.3",
		"js-yaml": "^4.1.0",
		"turbo": "^2.5.8"
	}
}
