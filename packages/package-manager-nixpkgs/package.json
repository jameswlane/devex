{
  "name": "@devex/package-manager-nixpkgs",
  "private": true,
  "version": "1.8.2",
  "description": "Nixpkgs plugin for DevEx CLI",
  "main": "main.go",
  "scripts": {
    "build": "go build -o devex-plugin-package-manager-nixpkgs .",
    "dev": "go build -race -o devex-plugin-package-manager-nixpkgs main.go",
    "test": "go test ./...",
    "lint": "golangci-lint run",
    "download": "go mod download",
    "mod": "go mod tidy"
  },
  "keywords": [
    "nix",
    "nixpkgs",
    "functional"
  ],
  "author": "DevEx Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jameswlane/devex",
    "directory": "packages/package-manager-nixpkgs"
  },
  "devex": {
    "plugin": {
      "type": "package-manager",
      "platforms": [
        "darwin",
        "linux"
      ],
      "dependencies": [
        "nix-env"
      ],
      "priority": 10,
      "supports": {
        "install": true,
        "remove": true,
        "update": true,
        "search": true,
        "list": true
      }
    }
  }
}
