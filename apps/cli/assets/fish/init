if command -q mise
    mise activate fish | source
end

if command -q zoxide
    zoxide init fish | source
end

if command -q fzf
    if test -f ~/.config/fish/functions/fzf_key_bindings.fish
        fzf_key_bindings
    end
end

if command -q oh-my-posh
    oh-my-posh init fish --config ~/.oh-my-posh/themes/night-owl.omp.json | source
end

if command -q nvm
    set -gx NVM_DIR "$HOME/.nvm"
    if test -s "$NVM_DIR/nvm.sh"
        bass source "$NVM_DIR/nvm.sh"
    end
    if test -s "$NVM_DIR/bash_completion"
        bass source "$NVM_DIR/bash_completion"
    end
end
